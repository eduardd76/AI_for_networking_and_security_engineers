# AI for Networking Engineers - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# AI API Keys (At least one required)
# ==========================================

# Anthropic Claude API (Primary - used in most examples)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI GPT-4 API (Optional - for multi-provider examples)
# Get your key at: https://platform.openai.com/
OPENAI_API_KEY=sk-proj-your-key-here

# Google Gemini API (Optional - for multi-provider examples)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIzaSy-your-key-here

# ==========================================
# Application Settings
# ==========================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location (optional)
LOG_FILE=./logs/app.log

# Enable metrics tracking
ENABLE_METRICS=true
METRICS_FILE=./metrics/usage_metrics.jsonl

# ==========================================
# API Client Configuration
# ==========================================

# Default model to use
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Maximum retries for failed requests
MAX_RETRIES=3

# Initial retry delay in seconds (doubles each retry)
INITIAL_RETRY_DELAY=1.0

# Request timeout in seconds
API_TIMEOUT=60

# ==========================================
# Rate Limiting (Client-Side)
# ==========================================

# Maximum requests per minute
MAX_REQUESTS_PER_MINUTE=50

# Maximum tokens per minute
MAX_TOKENS_PER_MINUTE=40000

# ==========================================
# Cost Controls
# ==========================================

# Daily budget limit in USD (0 = unlimited)
DAILY_BUDGET_LIMIT=50.0

# Alert when reaching % of budget
BUDGET_ALERT_THRESHOLD=80

# Email for budget alerts (optional)
BUDGET_ALERT_EMAIL=your-email@example.com

# ==========================================
# Caching Configuration
# ==========================================

# Enable response caching
ENABLE_CACHE=true

# Cache TTL in seconds (86400 = 24 hours)
CACHE_TTL=86400

# Cache backend (disk, redis, memory)
CACHE_BACKEND=disk

# Redis connection (if using redis backend)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# Network Device Credentials (for Chapter 10)
# ==========================================

# SSH credentials for lab devices
LAB_DEVICE_USERNAME=admin
LAB_DEVICE_PASSWORD=your-device-password
LAB_DEVICE_ENABLE_SECRET=your-enable-secret

# Default device type (cisco_ios, cisco_nxos, juniper_junos, arista_eos)
DEFAULT_DEVICE_TYPE=cisco_ios

# ==========================================
# Cloud Secrets Manager (Production)
# ==========================================

# AWS Secrets Manager
AWS_REGION=us-east-1
AWS_SECRET_NAME=prod/ai-networking/api-keys

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
AZURE_TENANT_ID=your-tenant-id

# Google Secret Manager
GCP_PROJECT_ID=your-project-id
GCP_SECRET_NAME=ai-networking-api-keys

# ==========================================
# Testing Configuration
# ==========================================

# Use mock API calls for testing (true/false)
USE_MOCK_API=false

# Test data directory
TEST_DATA_DIR=./sample-data

# ==========================================
# Production Settings (Chapter 12 - Ethics)
# ==========================================

# Enable audit logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=./logs/audit.jsonl

# Require human approval for high-risk changes
REQUIRE_APPROVAL=true

# Approval timeout in seconds
APPROVAL_TIMEOUT=300

# Email for approval requests
APPROVAL_EMAIL=approver@example.com

# ==========================================
# Development Settings
# ==========================================

# Enable debug mode (verbose logging, no retries)
DEBUG_MODE=false

# Pretty print JSON responses
PRETTY_PRINT=true

# Save all API requests/responses to disk
SAVE_API_CALLS=false
API_CALLS_DIR=./api-calls
